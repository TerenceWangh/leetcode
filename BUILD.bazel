# Bazel Build for leetcode

load("@rules_cc//cc:defs.bzl", "cc_library", "cc_test")

package(default_visibility = ["//visibility:public"])

licenses(["notice"])

config_setting(
  name = "windows",
  constraint_values = ["@bazel_tools//platforms:windows"],
)

cc_library(
  name = "leetcode-solution",
  srcs = glob(
    include = [
      "src/solutions/*.cc",
      "include/solution.hpp"
    ]
  ),
  hdrs = ["include/solution.hpp"],
  includes = ["include"]
)

cc_library(
  name = "leetcode-support",
  srcs = [
    "src/support.cc",
    "include/support.hpp"
  ],
  hdrs = ["include/support.hpp"],
  includes = ["include"],
)

cc_test(
  name = "leetcode-test",
  size = "small",
  srcs = glob(["test/*.cc"]),
  copts = ["-Iexternal/gtest/include"],
  deps = [
    "@gtest//:gtest-lib",
    ":leetcode-support",
    ":leetcode-solution",
  ],
)
